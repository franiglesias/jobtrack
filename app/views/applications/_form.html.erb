<%= form_with model: @application, local: true do |form| %>

  <% if @application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@application.errors.count, "error") %> prevented this application from being saved:</h2>
      <ul>
        <% @application.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :company %><br>
    <%= form.text_field :company %>
  </p>
  <p>
    <%= form.label :position %><br>
    <%= form.text_field :position %>
  </p>
  <p>
    <%= form.label :remote %><br>
    <%= form.select :remote, %w[yes maybe no] %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
